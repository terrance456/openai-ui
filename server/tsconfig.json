{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
